<header class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to image_tag("coinbridge2.png", alt: "Coinbridge", size: "100x100"), root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home",    root_path %></li>
          <% if signed_in? %>
          <li><%= link_to "Profile Page", current_user %></li>
          <li><%= link_to "Wallets", '#' %></li>
          <li><%= link_to "Reports", '/coinmarket' %></li>
          <li id="fat-menu" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Buy/Sell Currency", 'https://localbitcoins.com/sell_bitcoins', target: "_blank" %></li>
              <li><%= link_to "Secure Storing", 'https://en.bitcoin.it/wiki/Paper_wallet', target: "_blank"%></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Sign out", signout_path, method: "delete" %>
              </li>
            </ul>
          </li>
          <% else %>
          <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>




