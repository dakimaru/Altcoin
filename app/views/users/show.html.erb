<% provide(:title, @user.name) %>
<div class="row-fluid">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %> <br> <%= @user.email %>
			</h1>
		</section>
	</aside>
	<div class="well span8">
		<table id="curr-table">
			<tr>
				<th><%=@curr_name[0]%></th>
				<th><%=@curr_name[1]%></th>
				<th><%=@curr_name[2]%></th>
				<th><%=@curr_name[3]%></th>
				<th><%=@curr_name[4]%></th>
			</tr>
			<tr align='center'>
				<td><%=@curr_price[0]%></td>		
				<td><%=@curr_price[1]%></td>
				<td><%=@curr_price[2]%></td>
				<td><%=@curr_price[3]%></td>
				<td><%=@curr_price[4]%></td>
			</tr>
		</table>
	</div>
</div>